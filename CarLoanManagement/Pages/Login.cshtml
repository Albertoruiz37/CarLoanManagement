@page
@model CarLoanManagement.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="login-container">
    <div class="login-card">
        <div class="card">
            <div class="card-header text-center">
                <h2 class="mb-1">🚗 Car Loan Manager</h2>
                <p class="mb-0 opacity-75">Sign in to your account</p>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group mb-3">
                        <label asp-for="LoginViewModel.Username" class="form-label">
                            👤 Username
                        </label>
                        <input asp-for="LoginViewModel.Username"
                               class="form-control"
                               placeholder="Enter your username"
                               autocomplete="username" />
                        <span asp-validation-for="LoginViewModel.Username" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="LoginViewModel.Password" class="form-label">
                            🔒 Password
                        </label>
                        <input asp-for="LoginViewModel.Password"
                               class="form-control"
                               type="password"
                               placeholder="Enter your password"
                               autocomplete="current-password" />
                        <span asp-validation-for="LoginViewModel.Password" class="text-danger small"></span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <strong>⚠️ Login Failed</strong><br />
                            @Model.ErrorMessage
                        </div>
                    }

                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        🚀 Sign In
                    </button>
                </form>

                <hr class="my-4" />

                <div class="alert alert-info">
                    <h6 class="mb-3">🎮 Demo Accounts</h6>
                    <div class="row">
                        <div class="col-12 mb-2">
                            <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                <div>
                                    <strong>John Doe</strong><br />
                                    <small class="text-muted">4 vehicles • Mix of loans</small>
                                </div>
                                <div class="text-end">
                                    <code class="small">john</code><br />
                                    <code class="small">password123</code>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                <div>
                                    <strong>Jane Smith</strong><br />
                                    <small class="text-muted">5 vehicles • Premium portfolio</small>
                                </div>
                                <div class="text-end">
                                    <code class="small">jane</code><br />
                                    <code class="small">password456</code>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
    }

    .login-card .card {
        box-shadow: var(--shadow-xl);
        border: none;
    }

    .login-card .card-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #3b82f6 100%);
        border-radius: var(--border-radius) var(--border-radius) 0 0;
    }

    code {
        background: rgba(37, 99, 235, 0.1);
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.8rem;
        color: var(--primary-color);
    }

    .bg-light {
        background-color: #f8f9fa !important;
        border: 1px solid #e9ecef;
    }

    hr {
        border-color: var(--border-color);
        margin: 1.5rem 0;
    }
</style>